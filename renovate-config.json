{
  "extends": ["config:best-practices"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies",
        "action"
      ],
      "automerge": true
    },
    {
      "description": "v prefix workaround for action updates",
      "matchDepTypes": [
        "action"
      ],
      "extractVersion": "^(?<version>v\\d+\\.\\d+\\.\\d+)$",
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    }
  ]
}